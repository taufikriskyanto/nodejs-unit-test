  "bugs": {
    "url": "https://github.com/taufikriskyanto/nodejs-unit-test/issues"
  },
  "homepage": "https://github.com/taufikriskyanto/nodejs-unit-test#readme",
  "dependencies": {
    "winston" : "^3.10.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0"
  }
